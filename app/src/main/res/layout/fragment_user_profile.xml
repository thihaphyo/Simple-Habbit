<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg">

    <android.support.v7.widget.CardView
        android:id="@+id/card_username"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_medium_2"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium_2"
        android:layout_marginBottom="@dimen/margin_medium"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="20dp"
        app:cardElevation="5dp">

        <EditText
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/ic_person_black_24dp"
            android:drawablePadding="@dimen/margin_medium_2"
            android:drawableTint="@color/colorWhite"
            android:hint="User Name"
            android:inputType="text"
            android:padding="@dimen/margin_medium"
            android:paddingLeft="@dimen/margin_medium"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            android:textSize="@dimen/text_regular"
            android:textStyle="bold" />

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/card_email"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/card_username"
        android:layout_marginLeft="@dimen/margin_medium_2"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium_2"
        android:layout_marginBottom="@dimen/margin_medium"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="20dp"
        app:cardElevation="5dp">

        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/ic_mail_outline_black_24dp"
            android:drawablePadding="@dimen/margin_medium_2"
            android:drawableTint="@color/colorWhite"
            android:hint="Email Address"
            android:inputType="textEmailAddress"
            android:padding="@dimen/margin_medium"
            android:paddingLeft="@dimen/margin_medium"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            android:textSize="@dimen/text_regular"
            android:textStyle="bold" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_password"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/card_email"
        android:layout_marginLeft="@dimen/margin_medium_2"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium_2"
        android:layout_marginBottom="@dimen/margin_medium"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="20dp"
        app:cardElevation="5dp">

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/ic_room_key"
            android:drawablePadding="@dimen/margin_medium_2"
            android:drawableTint="@color/colorWhite"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="@dimen/margin_medium"
            android:paddingLeft="@dimen/margin_medium"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            android:textSize="@dimen/text_regular"
            android:textStyle="bold" />

    </android.support.v7.widget.CardView>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_user"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/card_username"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/margin_xlarge"
        android:src="@drawable/dummy_bg"
        app:civ_border_color="@color/border"
        app:civ_border_width="1dp" />

    <ImageView
        android:id="@+id/uploadImage"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/iv_user"
        android:layout_toRightOf="@+id/iv_user"
        android:src="@drawable/ic_edit_black_24dp"
        android:tint="@color/colorAccent" />


</RelativeLayout>